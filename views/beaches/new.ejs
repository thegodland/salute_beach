<% include ../partials/header %>
<!--the page to create a new beach-->
<div class="container gap">
    <div class="row">
        <h1 style="text-align: center">Create a new beach</h1>
        <div style="width: 30%;margin: 25px auto;">
            <form action="/beach" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" placeholder="name" required>
                </div>
                 <div class="form-group">
                      <label for="price">Price</label>
                    <input class="form-control" type="number" name="price" placeholder="price" min="0" step="1">
                </div>
                 <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" placeholder="Location Name" required>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" name="image" placeholder="image url" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea rows="5" class="form-control" name="description" placeholder="description" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">create</button>
                </div>
                
            </form>
            <a href="/beach">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>